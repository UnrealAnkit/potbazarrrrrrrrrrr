<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PLANTO - Forgot Password</title>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <script src="https://unpkg.com/validator@latest/validator.min.js"></script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Arial', sans-serif;
    }

    body {
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      background: linear-gradient(to bottom, #f0f7e7, #ffffff);
      padding: 20px;
    }

    .container {
      display: flex;
      max-width: 900px;
      width: 100%;
      border-radius: 15px;
      overflow: hidden;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      background: #fff;
    }

    /* Left section with solid green color background */
    .left-section {
      width: 50%;
      background-color: #2f855a;
      padding: 40px;
      color: #e6f4ea;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .left-section h1 {
      font-size: 36px;
      font-weight: bold;
      margin-bottom: 15px;
      color: #d1e8d2;
    }

    .left-section h1 span {
      margin-left: 10px;
      font-size: 30px;
    }

    .left-section p {
      font-size: 16px;
      opacity: 0.9;
      color: #c5e1c5;
    }

    /* Right section */
    .right-section {
      width: 50%;
      padding: 40px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      background: #fff;
      color: #2d3748;
    }

    .right-section h2 {
      font-size: 24px;
      font-weight: 600;
      margin-bottom: 10px;
      color: #276749;
    }

    .right-section p.subtitle {
      color: #4a5568;
      margin-bottom: 20px;
    }

    .error-message {
      color: #e53e3e;
      margin-bottom: 15px;
      font-size: 14px;
      display: none;
    }

    .form-group {
      margin-bottom: 15px;
    }

    .form-group label {
      display: block;
      font-size: 14px;
      color: #2d3748;
      margin-bottom: 5px;
    }

    .form-group input,
    .form-group select,
    .form-group textarea {
      width: 100%;
      padding: 12px;
      border: 1px solid #e2e8f0;
      border-radius: 8px;
      background: #f7fafc;
      font-size: 14px;
      outline: none;
      transition: border-color 0.3s;
    }

    .form-group input:focus,
    .form-group select:focus,
    .form-group textarea:focus {
      border-color: #2f855a;
      box-shadow: 0 0 0 3px rgba(47, 133, 90, 0.1);
    }

    .form-group textarea {
      resize: vertical;
      min-height: 80px;
    }

    button {
      width: 100%;
      padding: 12px;
      background: #2f855a;
      color: white;
      border: none;
      border-radius: 25px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.3s;
    }

    button:hover {
      background: #276749;
    }

    .login-link {
      text-align: center;
      margin-top: 20px;
      color: #4a5568;
      font-size: 14px;
    }

    .login-link a {
      color: #3182ce;
      text-decoration: none;
    }

    .login-link a:hover {
      text-decoration: underline;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .container {
        flex-direction: column;
        max-width: 100%;
      }

      .left-section,
      .right-section {
        width: 100%;
      }

      .left-section {
        padding: 20px;
        min-height: 200px;
      }

      .left-section h1 {
        font-size: 28px;
      }

      .left-section h1 span {
        font-size: 24px;
      }

      .left-section p {
        font-size: 14px;
      }

      .right-section {
        padding: 20px;
      }

      .right-section h2 {
        font-size: 20px;
      }

      .right-section p.subtitle {
        font-size: 14px;
        margin-bottom: 15px;
      }

      .form-group label {
        font-size: 12px;
      }

      .form-group input,
      .form-group select,
      .form-group textarea {
        padding: 10px;
        font-size: 12px;
      }

      .form-group textarea {
        min-height: 60px;
      }

      button {
        padding: 10px;
        font-size: 14px;
      }

      .login-link {
        font-size: 12px;
      }
    }

    @media (max-width: 480px) {
      body {
        padding: 10px;
      }

      .left-section {
        padding: 15px;
        min-height: 150px;
      }

      .left-section h1 {
        font-size: 24px;
      }

      .left-section h1 span {
        font-size: 20px;
      }

      .left-section p {
        font-size: 12px;
      }

      .right-section {
        padding: 15px;
      }

      .right-section h2 {
        font-size: 18px;
      }

      .right-section p.subtitle {
        font-size: 12px;
        margin-bottom: 10px;
      }

      .error-message {
        font-size: 12px;
      }

      .form-group {
        margin-bottom: 10px;
      }

      .form-group label {
        font-size: 11px;
      }

      .form-group input,
      .form-group select,
      .form-group textarea {
        padding: 8px;
        font-size: 11px;
      }

      .form-group textarea {
        min-height: 50px;
      }

      button {
        padding: 8px;
        font-size: 12px;
      }

      .login-link {
        font-size: 11px;
      }
    }

    @media (min-width: 1200px) {
      .container {
        max-width: 1000px;
      }

      .left-section h1 {
        font-size: 40px;
      }

      .left-section h1 span {
        font-size: 34px;
      }

      .left-section p {
        font-size: 18px;
      }

      .right-section h2 {
        font-size: 26px;
      }

      .right-section p.subtitle {
        font-size: 16px;
      }

      .form-group label {
        font-size: 15px;
      }

      .form-group input,
      .form-group select,
      .form-group textarea {
        padding: 14px;
        font-size: 15px;
      }

      button {
        padding: 14px;
        font-size: 18px;
      }

      .login-link {
        font-size: 15px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Left Section -->
    <div class="left-section">
      <h1>PLANTO<span>ðŸŒ¿</span></h1>
      <p>Lorem ipsum dolor sit amet, consectetur adipiscing.</p>
    </div>
    <!-- Right Section -->
    <div class="right-section">
      <h2>Forgot Password</h2>
      <p class="subtitle">Enter your email to reset your password</p>
      <p class="success-message" id="success-message"></p>
      <p class="error-message" id="error-message"></p>
      <form id="forgot-password-form" onsubmit="handleForgotPassword(event)">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" placeholder="Enter your email" required />
        </div>
        <button type="submit">Send Reset Link</button>
      </form>
      <p class="login-link">
        Remember your password? <a href="/login">Login</a>
      </p>
    </div>
  </div>

  <script>
    const API_BASE_URL = 'http://localhost:3000';

    async function handleForgotPassword(event) {
      event.preventDefault();
      const email = document.getElementById('email').value;
      const successMessage = document.getElementById('success-message');
      const errorMessage = document.getElementById('error-message');

      // Reset messages
      successMessage.style.display = 'none';
      successMessage.textContent = '';
      errorMessage.style.display = 'none';
      errorMessage.textContent = '';

      // Client-side validation
      if (!email) {
        errorMessage.textContent = 'Email is required';
        errorMessage.style.display = 'block';
        return;
      }
      if (!validator.isEmail(email)) {
        errorMessage.textContent = 'Invalid email format';
        errorMessage.style.display = 'block';
        return;
      }

      try {
        const response = await axios.post(`${API_BASE_URL}/api/users/forgot-password`, { email });
        successMessage.textContent = 'Reset link sent! Check your console for the token.';
        successMessage.style.display = 'block';
        console.log('Reset Token:', response.data.resetToken);
      } catch (error) {
        errorMessage.textContent = error.response?.data?.message || 'Failed to send reset link';
        errorMessage.style.display = 'block';
      }
    }
  </script>
</body>
</html>