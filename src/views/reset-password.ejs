<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PLANTO - Reset Password</title>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Arial', sans-serif;
    }

    body {
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      background: linear-gradient(to bottom, #f0f7e7, #ffffff);
      padding: 20px;
    }

    .container {
      display: flex;
      max-width: 900px;
      width: 100%;
      border-radius: 15px;
      overflow: hidden;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .left-section {
      width: 50%;
      background-image: url('https://images.unsplash.com/photo-1610973358285-6f0b27c804b3?ixlib=rb-4.0.3&auto=format&fit=crop&w=1350&q=80');
      background-size: cover;
      background-position: center;
      padding: 40px;
      color: white;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .left-section h1 {
      font-size: 36px;
      font-weight: bold;
      margin-bottom: 15px;
    }

    .left-section h1 span {
      margin-left: 10px;
      font-size: 30px;
    }

    .left-section p {
      font-size: 16px;
      opacity: 0.9;
    }

    .right-section {
      width: 50%;
      background: white;
      padding: 40px;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .right-section h2 {
      font-size: 24px;
      font-weight: 600;
      margin-bottom: 10px;
    }

    .right-section p.subtitle {
      color: #666;
      margin-bottom: 20px;
    }

    .success-message,
    .error-message {
      margin-bottom: 15px;
      font-size: 14px;
      display: none;
    }

    .success-message {
      color: #2f855a;
    }

    .error-message {
      color: #e53e3e;
    }

    .form-group {
      margin-bottom: 15px;
    }

    .form-group label {
      display: block;
      font-size: 14px;
      color: #333;
      margin-bottom: 5px;
    }

    .form-group input {
      width: 100%;
      padding: 12px;
      border: 1px solid #e2e8f0;
      border-radius: 8px;
      background: #f7fafc;
      font-size: 14px;
      outline: none;
      transition: border-color 0.3s;
    }

    .form-group input:focus {
      border-color: #2f855a;
      box-shadow: 0 0 0 3px rgba(47, 133, 90, 0.1);
    }

    button {
      width: 100%;
      padding: 12px;
      background: #2f855a;
      color: white;
      border: none;
      border-radius: 25px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.3s;
    }

    button:hover {
      background: #276749;
    }

    .login-link {
      text-align: center;
      margin-top: 20px;
      color: #666;
      font-size: 14px;
    }

    .login-link a {
      color: #3182ce;
      text-decoration: none;
    }

    .login-link a:hover {
      text-decoration: underline;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .container {
        flex-direction: column;
        max-width: 100%;
      }

      .left-section,
      .right-section {
        width: 100%;
      }

      .left-section {
        padding: 20px;
        min-height: 200px;
      }

      .left-section h1 {
        font-size: 28px;
      }

      .left-section h1 span {
        font-size: 24px;
      }

      .left-section p {
        font-size: 14px;
      }

      .right-section {
        padding: 20px;
      }

      .right-section h2 {
        font-size: 20px;
      }

      .right-section p.subtitle {
        font-size: 14px;
        margin-bottom: 15px;
      }

      .form-group label {
        font-size: 12px;
      }

      .form-group input {
        padding: 10px;
        font-size: 12px;
      }

      .success-message,
      .error-message {
        font-size: 12px;
      }

      button {
        padding: 10px;
        font-size: 14px;
      }

      .login-link {
        font-size: 12px;
      }
    }

    @media (max-width: 480px) {
      body {
        padding: 10px;
      }

      .left-section {
        padding: 15px;
        min-height: 150px;
      }

      .left-section h1 {
        font-size: 24px;
      }

      .left-section h1 span {
        font-size: 20px;
      }

      .left-section p {
        font-size: 12px;
      }

      .right-section {
        padding: 15px;
      }

      .right-section h2 {
        font-size: 18px;
      }

      .right-section p.subtitle {
        font-size: 12px;
        margin-bottom: 10px;
      }

      .form-group {
        margin-bottom: 10px;
      }

      .form-group label {
        font-size: 11px;
      }

      .form-group input {
        padding: 8px;
        font-size: 11px;
      }

      .success-message,
      .error-message {
        font-size: 11px;
      }

      button {
        padding: 8px;
        font-size: 12px;
      }

      .login-link {
        font-size: 11px;
      }
    }

    @media (min-width: 1200px) {
      .container {
        max-width: 1000px;
      }

      .left-section h1 {
        font-size: 40px;
      }

      .left-section h1 span {
        font-size: 34px;
      }

      .left-section p {
        font-size: 18px;
      }

      .right-section h2 {
        font-size: 26px;
      }

      .right-section p.subtitle {
        font-size: 16px;
      }

      .form-group label {
        font-size: 15px;
      }

      .form-group input {
        padding: 14px;
        font-size: 15px;
      }

      .success-message,
      .error-message {
        font-size: 15px;
      }

      button {
        padding: 14px;
        font-size: 18px;
      }

      .login-link {
        font-size: 15px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Left Section -->
    <div class="left-section">
      <h1>PLANTO<span>ðŸŒ¿</span></h1>
      <p>Lorem ipsum dolor sit amet, consectetur adipiscing.</p>
    </div>
    <!-- Right Section -->
    <div class="right-section">
      <h2>Reset Password</h2>
      <p class="subtitle">Enter your reset token and new password</p>
      <p class="success-message" id="success-message"></p>
      <p class="error-message" id="error-message"></p>
      <form id="reset-password-form" onsubmit="handleResetPassword(event)">
        <div class="form-group">
          <label for="resetToken">Reset Token</label>
          <input type="text" id="resetToken" placeholder="Enter your reset token" required />
        </div>
        <div class="form-group">
          <label for="newPassword">New Password</label>
          <input type="password" id="newPassword" placeholder="Enter your new password" required />
        </div>
        <button type="submit">Reset Password</button>
      </form>
      <p class="login-link">
        Back to <a href="/login">Login</a>
      </p>
    </div>
  </div>

  <script>
    const API_BASE_URL = 'http://localhost:3000';

    async function handleResetPassword(event) {
      event.preventDefault();
      const resetToken = document.getElementById('resetToken').value;
      const newPassword = document.getElementById('newPassword').value;
      const successMessage = document.getElementById('success-message');
      const errorMessage = document.getElementById('error-message');

      // Reset messages
      successMessage.style.display = 'none';
      successMessage.textContent = '';
      errorMessage.style.display = 'none';
      errorMessage.textContent = '';

      // Client-side validation
      if (!resetToken || !newPassword) {
        errorMessage.textContent = 'Reset token and new password are required';
        errorMessage.style.display = 'block';
        return;
      }
      if (newPassword.length < 8) {
        errorMessage.textContent = 'Password must be at least 8 characters';
        errorMessage.style.display = 'block';
        return;
      }

      try {
        await axios.post(`${API_BASE_URL}/api/users/reset-password`, { resetToken, newPassword });
        successMessage.textContent = 'Password reset successfully! Redirecting to login...';
        successMessage.style.display = 'block';
        setTimeout(() => {
          window.location.href = '/login';
        }, 2000);
      } catch (error) {
        errorMessage.textContent = error.response?.data?.message || 'Failed to reset password';
        errorMessage.style.display = 'block';
      }
    }
  </script>
</body>
</html>